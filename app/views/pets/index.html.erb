<h1>All pets</h1>
<%= link_to 'Add pet', pets_new_path, class: 'btn btn-primary mb-4' %>
<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-12 col-md-4 col-lg-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to pet.name, pet_path(pet) %></h5>
          <p class="card-text"><% if pet.found_on  %>Found <%= pet.found_days_ago %> <%= 'day'.pluralize(pet.found_days_ago) %> ago <% end %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
